{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboardAutoclose": true,
  "extends": [
    "config:base",
    ":rebaseStalePrs"
  ],
  "labels": [
    "renovate"
  ],
  "pre-commit": {
    "enabled": true,
    "schedule": [
      "every month"
    ]
  },
  "packageRules": [
    {
      "automerge": true,
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ]
    },
    {
      "automerge": true,
      "dependencyDashboardApproval": true,
      "matchUpdateTypes": [
        "major"
      ]
    },
    {
      "groupName": "aws-go-sdk-v2 monorepo",
      "groupSlug": "aws-go-sdk-v2",
      "matchDatasources": [
        "go"
      ],
      "matchPackagePrefixes": [
        "github.com/aws/aws-sdk-go-v2"
      ],
      "schedule": [
        "every month"
      ]
    }
  ],
  "postUpdateOptions": [
    "gomodUpdateImportPaths",
    "gomodTidy"
  ],
  "prHourlyLimit": 3,
  "stabilityDays": 1,
  "timezone": "Europe/Paris"
}
